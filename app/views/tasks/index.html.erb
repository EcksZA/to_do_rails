<h1>Tasks</h1>

<h3>Pending Tasks</h3>
<ul>
  <% @pending_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.task %></a></li>
  <% end %>
</ul>

<h3>Done Tasks</h3>
<ul>
  <% @done_tasks.each do |task| %>
    <li><a href="/tasks/<% task.id %>"><%= task.task %></li>
  <% end %>
</ul>

<p><a href="/tasks/new">Create a new task</p>
